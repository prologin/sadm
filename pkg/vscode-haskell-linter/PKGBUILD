# Maintainer: Victor Collod <victor.collod@prologin.org>
pkgname=vscode-haskell-linter
# TODO: proper versionning
pkgver=1
pkgrel=1
pkgdesc="haskell-linter for vscode"
depends=(vscode-global-plugins)
makedepends=(code)
options=()
noextract=()
md5sums=()
validpgpkeys=()
arch=("x86_64")

package() {
        extensions="$pkgdir/usr/share/vscode-extensions/"
        mkdir -p -- "$extensions"
        code --extensions-dir "$extensions" --install-extension hoovercj.haskell-linter
}
