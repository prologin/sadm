pkgname=vscode-haskell-syntax-highlight
# TODO: proper versionning
pkgver=1
pkgrel=1
pkgdesc="haskell-syntax-highlight for vscode"
depends=(vscode-global-plugins)
makedepends=(code)
options=()
noextract=()
md5sums=()
validpgpkeys=()
arch=("x86_64")

package() {
        extensions="$pkgdir/usr/share/vscode-extensions/"
        mkdir -p -- "$extensions"
        code --extensions-dir "$extensions" --install-extension justusadam.language-haskell
}
